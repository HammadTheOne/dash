{
    "extends": [
        ":onlyNpm",
        "schedule:daily"
    ],
    "enabledManagers": [
        "npm"
    ],
    "groupName": "all dependencies",
    "groupSlug": "all",
    "lockFileMaintenance": {
        "enabled": false
    },
    "packageRules": [
        {
            "packageNames": [
                "rc-slider",
                "react-dates",
                "react-dropzone",
                "react-markdown",
                "react-syntax-highlighter",
                "react-virtualized-select"
            ],
            "updateTypes": "pin"
        },
        {
            "packagePatterns": [
                "*"
            ],
            "depTypeList": [
                "dependencies",
                "devDependencies"
            ],
            "groupName": "all dependencies",
            "groupSlug": "all"
        },
        {
            "depTypeList": [
                "peerDependencies",
                "engines"
            ],
            "enabled": false
        }
    ],
    "rangeStrategy": "bump",
    "separateMajorMinor": false
}
